<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#060E1E</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="action_bar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_secondary</item>
    </style>
    <style name="bottom_app_bar" parent="Theme.TodoApp">
        <item name="android:background">@color/color_primary_variant</item>
    </style>
    <style name="bottom_navigation_style" parent="Theme.TodoApp">
        <item name="android:background">@color/transparent_color</item>
        <item name="itemIconTint">@color/menu_item_color</item>
        <item name="itemTextColor">@color/menu_item_color</item>
    </style>
    <style name="add_task_text_style">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#CCFFFFFF</item>
    </style>
    <style name="calender_Style" >
        <item name="android:background">@color/color_primary_variant</item>
        <item name="mcv_selectionColor">@color/color_secondary</item>
        <item name="mcv_calendarMode">week</item>
        <item name="mcv_firstDayOfWeek">saturday</item>
        <item name="mcv_selectionMode">single</item>
        <item name="android:elevation">4dp</item>
        <item name="mcv_tileWidth">match_parent</item>
        <item name="mcv_tileHeight">30dp</item>
    </style>
    <style name="change_mode_text_style">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="change_mode_button_style">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:background">@drawable/rounded_mode</item>
        <item name="backgroundTint">@color/color_primary_variant</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">6dp</item>
    </style>

</resources>